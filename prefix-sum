#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int arr[n];
    int pre[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    pre[0]=arr[0];

    for(int i=1;i<n;i++)
    {
        pre[i]=pre[i-1]+arr[i];
    }
     for(int i=1;i<n;i++)
    {
        if(pre[i-1]==pre[n-1]-pre[i])        {
            cout<<i;
            return 0;
        }
    }
}
